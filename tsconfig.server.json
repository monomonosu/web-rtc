{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": false,
    "incremental": true,
    "esModuleInterop": true
  },
  "include": ["server/**/*", "src/types/**/*"],
  "exclude": ["node_modules", ".next", "dist", "src/app", "src/components", "src/hooks", "src/lib"]
}
